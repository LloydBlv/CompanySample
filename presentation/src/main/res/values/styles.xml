<resources>

  <!-- Base application theme. -->

  <style name="BaseTheme" parent="Theme.AppCompat">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:textColorHint">@color/hint_disabled_dark</item>
  </style>
  <style name="AppTheme" parent="BaseTheme">
  </style>

  <style name="AppTheme.ColdStart">
    <item name="android:windowBackground">@drawable/cold_start_bg</item>
  </style>

  <style name="TextAppearance.TilePrimary" parent="@style/TextAppearance.AppCompat.Title">
    <item name="android:fontFamily">@font/roboto_mono</item>
    <item name="lineHeightHint">35sp</item>
  </style>

</resources>
